<Window x:Class="ActuarialCalc.ConnectionDetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ConnectionDetails" Height="213" Width="234" Background="WhiteSmoke" ResizeMode="NoResize">

    <Canvas HorizontalAlignment="Left" Height="161" VerticalAlignment="Top" Width="207" Background="White" Margin="10,10,0,0" >
        <Label Content="Server:" Canvas.Left="10" Canvas.Top="10"/>
        <Label Content="Username:" Canvas.Left="10" Canvas.Top="36"/>
        <Label Content="Password:" Canvas.Left="10" Canvas.Top="62"/>
        <Label Content="Database:" Canvas.Left="10" Canvas.Top="88"/>
        <TextBox x:Name="Server_TextBox" Height="23" Canvas.Left="81" TextWrapping="Wrap" Text="localhost" Width="120" Canvas.Top="13"/>
        <TextBox x:Name="Username_TextBox" Height="23" Canvas.Left="81" TextWrapping="Wrap" Text="root" Canvas.Top="41" Width="120"/>
        <TextBox x:Name="Password_TextBox" Height="23" Canvas.Left="81" TextWrapping="Wrap" Text="" Canvas.Top="69" Width="120"/>
        <TextBox x:Name="Database_TextBox" Height="23" Canvas.Left="81" TextWrapping="Wrap" Text="ActuarialData" Canvas.Top="88" Width="120"/>
        <Button x:Name="Connect_Button" Content="Connect" Canvas.Left="126" Canvas.Top="129" Width="75" Click="Connect_Button_Click"/>
    </Canvas>

</Window>
